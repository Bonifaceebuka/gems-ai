{
    "name": "gems-ai-service",
    "version": "1.0.0",
    "description": "GEMS AI backend RESTful API service",
    "main": "dist/server.js",
    "scripts": {
        "test": "jest",
        "start": "node dist/server.js",
        "lint": "eslint src/**/*.ts",
        "tsoa:routes": "tsoa routes",
        "tsoa:spec": "tsoa spec",
        "preswagger:clean": "rimraf src/swagger",
        "tsoa:update": "npm run preswagger:clean && npm run tsoa:routes && npm run tsoa:spec",
        "typeorm": "ts-node ./node_modules/typeorm/cli.js",
        "typeorm:ds": "npm run typeorm -- -d ./src/common/configs/postgres.ts",
        "migration:create": "npm run typeorm migration:create",
        "migration:generate": "npm run typeorm:ds -- migration:generate",
        "migration:run": "npm run typeorm:ds -- migration:run",
        "migration:revert": "npm run typeorm:ds -- migration:revert",
        "dev": "rimraf dist && npm run tsoa:update && npx nodemon --require tsconfig-paths/register src/server.ts",
        "build": "rimraf dist && echo 'Deleted dist' && npm run tsoa:update && echo 'Generated tsoa' && tsc && echo 'Compiled TS'"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "dependencies": {
        "axios": "^1.9.0",
        "bcryptjs": "^3.0.2",
        "class-validator": "^0.14.2",
        "dotenv": "^16.4.7",
        "express": "^4.21.2",
        "express-rate-limit": "^7.5.0",
        "jsonwebtoken": "^9.0.2",
        "pg": "^8.16.0",
        "swagger-ui-express": "^5.0.1",
        "tsoa": "^6.6.0",
        "typeorm": "^0.3.21",
        "winston": "^3.17.0",
        "winston-daily-rotate-file": "^5.0.0"
    },
    "devDependencies": {
        "@types/cors": "^2.8.17",
        "@types/express": "^5.0.0",
        "@types/jsonwebtoken": "^9.0.9",
        "@types/node": "^22.13.10",
        "@types/swagger-ui-express": "^4.1.8",
        "nodemon": "^3.1.9",
        "rimraf": "^6.0.1",
        "ts-node": "^10.9.2",
        "tsconfig-paths": "^4.2.0",
        "typedi": "^0.10.0",
        "typescript": "^5.8.2"
    }
}
